{
  "name": "ws-robust",
  "version": "0.2.0-beta.1",
  "description": "A wrapper around the browser's WebSocket to make it easier to work with",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --silent --coverage",
    "lint": "eslint ./*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A .",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keitwb/ws-robust.git"
  },
  "keywords": [
    "websocket"
  ],
  "author": "Ben Keith <keitwb@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/keitwb/ws-robust/issues"
  },
  "homepage": "https://github.com/keitwb/ws-robust#readme",
  "sideEffects": false,
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.4",
    "@types/websocket": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "jest-websocket-mock": "^2.4.0",
    "mock-socket": "^9.2.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
