{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [ "dom", "es2017" ],
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "typeRoots": ["typings", "node_modules/@types"],
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "**/*.test.ts",
    "dist/**/*"
  ]
}
